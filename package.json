{
  "name": "demo-project",
  "version": "1.0.0",
  "description": "A demo project with React frontend, Express backend, and Playwright tests",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "npm --prefix frontend start",
    "start:backend": "npm --prefix backend start",
    "test": "npx playwright test", 
    "test:frontend": "npm --prefix frontend run tests",
    "test:backend": "npm --prefix backend run tests",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "lint": "eslint ."
  },
  "dependencies": {
    "concurrently": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "playwright": "^1.49.1",
    "react-scripts": "^4.0.0"
  },
  "keywords": [],
  "author": "Eva G.",
  "license": "ISC"
}
